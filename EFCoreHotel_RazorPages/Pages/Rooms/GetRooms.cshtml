@page
@model EFCoreHotel_RazorPages.GetRoomsModel
@{
    ViewData["Title"] = "GetRooms";
}

<h1>List of  rooms</h1>

<table class="table">
    <thead>
        <tr>
            <th>  Room No  </th>
            <th> Price  </th>
            <th> Types </th>
            <th>  Hotel No </th>
            </tr>
    </thead>
    <tbody>

        @if (Model.Rooms != null)
        {
            @foreach (var item in Model.Rooms)
            {
        <tr>
            <td> @item.RoomNo  </td>
            <td>  @item.Price </td>
            <td>  @item.Types </td>
            <td>  @item.HotelNo  </td>   
            <td>
                        <p>
                            <a asp-page="/Rooms/RoomDetails" asp-page-handler="GetRoom" asp-route-id1="@item.HotelNo" asp-route-id2="@item.RoomNo">RoomDetails</a>
                        <p>

            </td>

        </tr>
            }
        }
</table>




